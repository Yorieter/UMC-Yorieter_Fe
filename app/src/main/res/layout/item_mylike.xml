<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="18dp"
    android:background="@color/subColor3">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_mylike_img_cardView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/item_mylike_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mypage_mypost_basic_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_mylike_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누구나 손쉽게 만들 수 있는 두부 샐러드"
            android:textColor="@color/subColor5"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/item_mylike_img_cardView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/mypage_like_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/recipe_like"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/item_mylike_title_tv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/mylike_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="작성일자: 2024-06-29"
            android:textSize="11dp"
            android:textColor="@color/subColor5"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/mypage_like_iv"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>