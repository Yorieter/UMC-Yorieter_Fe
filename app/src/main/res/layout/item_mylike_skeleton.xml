<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:paddingLeft="18dp"
    android:background="@color/ic_yorieter_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_mylike_img_cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_mylike_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/cardview_shadow_start_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_mylike_title_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@+id/item_mylike_img_cardView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypost_date"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintStart_toEndOf="@+id/item_mylike_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_mylike_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>